# JWT Secret Key - CRITICAL: Use a strong, random secret in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_min_32_characters

# JWT Token Expiry Time (in minutes)
# Default: 1440 minutes = 24 hours
JWT_EXPIRY_MINUTES=1440

# Resend API Key for sending emails
# Get your free API key at: https://resend.com/api-keys
# 3,000 emails/month free tier - no credit card required
RESEND_API_KEY=re_your_api_key_here

# Allowed email for Resend (free tier kun tillader verificerede emails)
# Emails til andre adresser vil falde tilbage til file logging
RESEND_ALLOWED_EMAIL=din@email.com

# Client URL for CORS configuration
# In production, set this to your deployed frontend URL
CLIENT_URL=http://localhost:5173

# Server Port (optional)
# PORT=8081
